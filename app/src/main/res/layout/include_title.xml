<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar_bg"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/title_bg"
    android:layout_height="50dp">
    <ImageView
        android:id="@+id/img_back"
        android:src="@mipmap/ic_back_w"
        android:layout_width="50dp"
        android:scaleType="centerInside"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_height="match_parent" />

    <TextView
        android:layout_toRightOf="@+id/img_back"
        android:id="@+id/tv_left_text"
        android:paddingLeft="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize18" />

    <TextView
        android:id="@+id/tv_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp5"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize16" />
    <RelativeLayout
        android:id="@+id/rl_friend"
        android:layout_width="40dp"
        android:visibility="invisible"
        android:layout_toLeftOf="@+id/rl_image_right"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginRight="10dp"
            android:src="@drawable/friend"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp5"
            android:id="@+id/iv_friends"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_friend_num"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:text="12"
            android:visibility="invisible"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_textview_style"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_image_right"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_right_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/msg_right"
            />
        <TextView
            android:id="@+id/tv_red_pot"
            style="@style/text14_white_color"
            android:layout_width="8dp"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/iv_right_share"
            android:layout_marginLeft="-10dp"
            android:gravity="center"
            android:layout_height="8dp"
            android:background="@drawable/round_textview_style"
            />
    </RelativeLayout>


</RelativeLayout>